# ----------------------------------------------
# üêò POSTGRESQL (n8n Database)
# ----------------------------------------------
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_password
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=n8n_password

# Databases adicionais (legacy)
EVOLUTION_DB=evolution

# ----------------------------------------------
# ‚ö° REDIS (Cache e Filas)
# ----------------------------------------------
REDIS_PASSWORD=redis_password

# ----------------------------------------------
# üê∞ RABBITMQ (Message Broker)
# ----------------------------------------------
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=n8n_vhost

# ----------------------------------------------
# üîç GRAFANA (Monitoramento)
# ----------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# ----------------------------------------------
# üîÑ N8N (Automa√ß√£o)
# ----------------------------------------------
# Host e Protocol
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_PORT=5678

# Webhook Configuration
WEBHOOK_URL=http://localhost:5678

# Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# Timezone
GENERIC_TIMEZONE=America/Sao_Paulo
TZ=America/Sao_Paulo

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console,file

# Features
N8N_METRICS=true
N8N_DIAGNOSTICS_ENABLED=false

# Performance Tuning
N8N_RUNNERS_ENABLED=true
OFFLOAD_MANUAL_EXECUTIONS_TO_WORKERS=true

